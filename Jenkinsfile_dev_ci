stage 'Dev Sync up'
node ('slave1-bc63f2f9') {
git 'git@github.com:gskrscm/gittest.git'
// This is one time activity. 
sh 'git remote add upstream https://github.com/gitaccountforprashant/gittest.git'
sh 'git fetch upstream'
sh 'git checkout master'
sh 'git merge upstream/master  --no-edit'
sh 'git config user.email "gskr.scm@gmail.com"'
sh 'git config user.name "gskrscm"'
sh 'git push'
}

stage 'Build'
node ('slave1-bc63f2f9') {
git 'https://github.com/gskrscm/gittest.git'
sh '''mvn clean install -pl war -am -DskipTests
'''
}

stage 'stage to nexus'
node ('slave1-bc63f2f9') {
sh'curl --upload-file /home/ubuntu/workspace/JenkinsDevCI/war/target/jenkins.war https://nexus.dev.global.tesco.org/nexus/content/repositories/PAAS/TescoJenkins/war/${BUILD_NUMBER}/jenkins.war -u ${username}:${password}'
}

stage 'build docker image'
node ('slave1-bc63f2f9') {
git 'https://github.com/abhishekgaurav1/dockerfiles.git'
// sh 'sudo docker stop $(sudo docker ps -q)'
// sh 'sudo docker rm $(sudo docker ps -aq)'
sh 'mv Dockerfile.jenkins Dockerfile'
sh 'sed -i  \"s#RUN wget NEXUS_URL_JENKINS.*#RUN wget --user ${username} --password ${password} https://nexus.dev.global.tesco.org/nexus/content/repositories/PAAS/TescoJenkins/war/${BUILD_NUMBER}/jenkins.war -P /opt#\" Dockerfile'
sh 'cat Dockerfile'
sh 'sudo docker build -t jenkins:${BUILD_NUMBER} .'
sh 'sudo docker run -d -p 8080:8080 jenkins:${BUILD_NUMBER}'
sh 'echo http://35.163.235.44:8080'
}
